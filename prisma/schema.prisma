generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  sub       String   @unique
  createdAt DateTime @default(now())

  pets      Pet[]
}

model Pet {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  name      String
  type      String
  notes     String?

  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])
}
