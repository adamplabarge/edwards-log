generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

enum MedicationType {
  ASM   // Antiseizure Medications
  OTHER // Other
}

model User {
  id        String   @id @default(uuid())
  sub       String   @unique
  createdAt DateTime @default(now())

  pets      Pet[]
}

model Pet {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  name      String
  type      String
  notes     String?

  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])

  // Relations
  seizureEvents    SeizureEvent[]
  feedingEvents    FeedingEvent[]
  medicationEvents MedicationEvent[]
  activityEvents   ActivityEvent[]
  changeLines      ChangeLine[]
  shareLinks       PetShareLink[]
}


model SeizureEvent {
  id     String   @id @default(uuid())
  petId  String
  pet    Pet      @relation(fields: [petId], references: [id])
  date   DateTime
  notes  String?
  createdAt DateTime @default(now())
}

model FeedingEvent {
  id     String   @id @default(uuid())
  petId  String
  pet    Pet      @relation(fields: [petId], references: [id])
  date   DateTime
  type   String
  notes  String?
  createdAt DateTime @default(now())
}

model MedicationEvent {
  id        String   @id @default(uuid())
  petId     String
  pet       Pet      @relation(fields: [petId], references: [id])
  date      DateTime
  type      MedicationType @default(ASM)
  notes     String?
  createdAt DateTime @default(now())
}

model ActivityEvent {
  id        String   @id @default(uuid())
  petId     String
  pet       Pet      @relation(fields: [petId], references: [id])
  date      DateTime
  endDate   DateTime @default(now())
  type      String
  notes     String?
  createdAt DateTime @default(now())
}

model ChangeLine {
  id     String   @id @default(uuid())
  petId  String
  pet    Pet      @relation(fields: [petId], references: [id])
  date   DateTime
  label  String
  createdAt DateTime @default(now())
}

model PetShareLink {
  id        String   @id @default(uuid())
  petId     String
  expiresAt DateTime? // optional expiry
  createdAt DateTime @default(now())
  createdBy String   // user id who created the share link

  pet Pet @relation(fields: [petId], references: [id])

  @@index([petId])
}
