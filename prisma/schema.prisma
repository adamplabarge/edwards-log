generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  sub       String   @unique
  createdAt DateTime @default(now())

  pets      Pet[]
}

model Pet {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  name      String
  type      String
  notes     String?

  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])

  // Relations
  seizureEvents    SeizureEvent[]
  feedingEvents    FeedingEvent[]
  medicationEvents MedicationEvent[]
  changeLines      ChangeLine[]
  shareLinks       PetShareLink[]
}

model SeizureEvent {
  id     String   @id @default(uuid())
  petId  String
  pet    Pet      @relation(fields: [petId], references: [id])
  date   DateTime
  notes  String?
}

model FeedingEvent {
  id     String   @id @default(uuid())
  petId  String
  pet    Pet      @relation(fields: [petId], references: [id])
  date   DateTime
  type   String
  notes  String?
}

model MedicationEvent {
  id     String   @id @default(uuid())
  petId  String
  pet    Pet      @relation(fields: [petId], references: [id])
  date   DateTime
  notes  String?
}

model ChangeLine {
  id     String   @id @default(uuid())
  petId  String
  pet    Pet      @relation(fields: [petId], references: [id])
  date   DateTime
  label  String
}

model PetShareLink {
  id        String   @id @default(uuid())
  petId     String
  expiresAt DateTime? // optional expiry
  createdAt DateTime @default(now())
  createdBy String   // user id who created the share link

  pet Pet @relation(fields: [petId], references: [id])

  @@index([petId])
}
